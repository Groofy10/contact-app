<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mb-4">Detail Kontak</h2>
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title text-primary"><%= contactView.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= contactView.number %>
          </h6>
          <p class="card-text">
            <strong>Email:</strong> <%= contactView.email %>
          </p>
          <div class="d-flex justify-content-between mt-4">
            <a href="/contact" class="btn btn-outline-secondary"
              >&laquo; Back</a
            >
            <div>
              <a
                href="/contact/update/<%= contactView.name %>"
                class="btn btn-primary me-2"
              >
                Update
              </a>
              <!-- <a
                href="#"
                class="btn btn-danger"
                onclick="deleting('<%= contactView.name %>')"
              >
                Delete
              </a> -->
              <form
                action="/contact?_method=DELETE"
                method="POST"
                class="d-inline"
              >
                <input
                  type="hidden"
                  name="_id"
                  value="<%= contactView._id %>"
                />
                <button
                  type="submit"
                  class="btn btn-danger"
                  onclick="return confirm('Are you sure you want to delete this contact?')"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
